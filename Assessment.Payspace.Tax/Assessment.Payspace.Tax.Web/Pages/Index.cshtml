@page
@model IndexModel
@{
    ViewData["Title"] = "Payscale Tax Assessment";
}
<div class="text-center">
    <div class="form-group">
        <form method="post">
            <section lass="min-vh-100">
                <div>
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                                <h1 class="display-4 py-2 text-truncate">Tax Calculator</h1>
                                <div class="px-2">
                                    <div class="justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Amount)
                                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SelectedTaxType)
                                            @Html.DropDownListFor(m => m.SelectedTaxType, Model.TaxTypes, "", htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.SelectedTaxType, "", new { @class = "text-danger" })
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-lg">Calculate</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>

</div>
